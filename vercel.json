{
  "version": 2,
  "framework": "remix",
  "buildCommand": "remix build",
  "devCommand": "remix dev",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "outputDirectory": "public",
  "build": {
    "env": {
      "ENABLE_VC_BUILD": "1"
    }
  },
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
