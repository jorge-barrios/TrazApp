{
  "version": 2,
  "framework": "remix",
  "buildCommand": "remix vite:build",
  "devCommand": "remix dev",
  "installCommand": "npm install",
  "outputDirectory": "build",
  "regions": ["iad1"],
  "functions": {
    "api/*": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/build/:path*",
      "destination": "/build/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/api/index.js"
    }
  ]
}
