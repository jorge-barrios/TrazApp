{
  "version": 2,
  "framework": "remix",
  "buildCommand": "npx remix vite:build",
  "devCommand": "npx remix dev",
  "installCommand": "npm install",
  "outputDirectory": "build",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/build/:path*",
      "destination": "/build/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/:path*"
    }
  ]
}
